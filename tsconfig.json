{
    "compilerOptions": {
        "target": "es2018",
        "module": "node16",
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": true,
        "outDir": "dist",
        "verbatimModuleSyntax": true,
    },
    "include": [
        "src/*.ts"
    ]
}